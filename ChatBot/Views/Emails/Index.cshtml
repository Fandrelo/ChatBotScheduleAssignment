@model IEnumerable<ChatBot.Models.ScheduleAssignment.Email>

@{
    ViewData["Title"] = "Emails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OwnerEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MailListNavigation)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OwnerEmail)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MailListNavigation.Name)
                    </td>
                    <td>
                        <a asp-controller="Assignments" asp-action="Index" asp-route-id="@item.MailList">Assignments</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
